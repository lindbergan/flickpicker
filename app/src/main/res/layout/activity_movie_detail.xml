<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/color_backdrop"
    >

    <FrameLayout
        android:layout_width="@dimen/movie_detail_image_width"
        android:layout_height="@dimen/movie_detail_image_height"
        android:padding="@dimen/movie_detail_image_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/color_backdrop"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movieDetailImageView"
            android:background="@color/color_accent"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie title here..."
        android:id="@+id/movieDetailTitleTextField"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/movie_detail_default_margin"
        android:layout_toStartOf="@+id/movieDetailRatingIcon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_detail_rate_button"
        android:id="@+id/movieDetailRateButton"
        android:background="@color/color_rating_button"
        android:layout_marginBottom="@dimen/movie_detail_default_margin"
        android:layout_marginEnd="@dimen/movie_detail_default_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieDetailRatingBar"
        android:stepSize="1"
        android:layout_alignTop="@+id/movieDetailRateButton"
        android:layout_toStartOf="@+id/movieDetailRateButton"
        android:layout_marginEnd="@dimen/movie_detail_default_margin"
        android:layout_marginStart="@dimen/movie_detail_default_margin"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieDetailRatingIcon"
        android:numStars="1"
        android:rating="1"
        android:background="@color/color_backdrop"
        android:layout_above="@+id/descriptionTextField"
        android:layout_toEndOf="@+id/movieDetailRatingBar"
        android:layout_marginBottom="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie description/plot goes here..."
        android:id="@+id/descriptionTextField"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/movie_detail_default_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre goes here..."
        android:id="@+id/movieDetailGenreTextField"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/movieDetailTitleTextField"
        android:layout_alignStart="@+id/movieDetailTitleTextField" />
</RelativeLayout>