<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_cell"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|bottom"
        android:layout_weight="1.0">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/no_user_profile"
            android:layout_weight="1.0"
            android:layout_gravity="left|top"/>
    </FrameLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/list_cell_content_holder_width"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left|right"
        android:padding="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="User"
                android:id="@+id/username_textview"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" just watched..."
                android:id="@+id/textView4"
                android:textStyle="italic"
                android:textSize="14dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Movie"
                android:id="@+id/moviename_textview"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" (year)"
                android:id="@+id/movie_year_textview" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="...and rated it: "
            android:id="@+id/textView3"
            android:textStyle="italic"
            android:textSize="13sp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>